<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
<table class="table table-hover">
<thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Title</th>
    <th scope="col">Description</th>
    <th scope="col">Desinger</th>
    <th scope="col">Actions</th>
  </tr>
</thead>
<tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.titel %></td>
      <td><%= post.text %></td>
      <td><%= post.desinger_id %></td>
      <td><%= link_to "Show this post",post,class:"btn btn-outline-info" %></td>
      
    </tr>
  <% end %>
</tbody>
</table>
 
</div>



<%= link_to "New post", new_post_path, class: "btn btn-outline-primary" %>
<%= link_to "Desingers", desingers_path, class: "btn btn-outline-primary" %>
